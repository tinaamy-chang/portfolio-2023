---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "@fontsource-variable/dm-sans";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  * {
    box-sizing: border-box;
    font-family: "DM Sans Variable", system-ui, sans-serif;
    font-weight: 300;
    padding: 0;
    margin: 0;
    font-size: 1em;
    scroll-behavior: smooth;
  }
  :root {
    box-sizing: border-box;
    font-size: 14px;
  }
  html {
    background: #fff;
    font-weight: 300;
    scroll-behavior: smooth;
    color: #4d4d4d;
  }

  h1 {
    font-weight: 400;
    font-size: 2em;
  }

  h2 {
    font-size: 1.5em;
    font-weight: 300;
  }

  h3 {
    font-weight: 550;
    font-size: 1em;
    margin-bottom: 12px;
  }

  body {
  }

  strong {
    font-weight: 550;
  }

  ul {
    list-style-position: inside;
    list-style-type: circle;
    padding-left: 8px;
  }

  ol {
    list-style-position: inside;
    padding-left: 8px;
  }

  a:-webkit-any-link {
    text-decoration: none;
    color: #4d4d4d;
  }
</style>
