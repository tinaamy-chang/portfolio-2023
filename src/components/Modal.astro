---
import { Icon } from "astro-icon";

interface Props {}

const {} = Astro.props;
---

<div class="modal-wrapper">
  <div class="close-button">
    <Icon class="close-button-icon" name="ic:sharp-close" />
  </div>
  <div class="modal">
    <img class="modal-image" src="https://placehold.co/500x500" />
    <p class="modal-caption">something</p>
  </div>
</div>

<style>
  .modal-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    background-color: rgba(0, 0, 0, 0.9);
    width: 100%;
    height: 100%;
    z-index: 1;
    align-items: center;
    justify-content: center;
    text-align: center;
    overflow: auto;
    padding: 20px;
  }

  .close-button {
    position: absolute;
    right: 12px;
    top: 12px;
    width: 48px;
    &:hover {
      cursor: pointer;
    }
  }

  .close-button-icon {
    color: white;
  }
  .modal-image {
    width: 100%;

    @media screen and (max-width: 600px) {
    }
  }
  .modal-caption {
    color: white;
    font-size: 1.2em;
    margin: 8px;
  }
</style>

<script>
  const closebutton = document.querySelector(
    ".close-button"
  ) as HTMLElement | null;
  const modalwrapper = document.querySelector(
    ".modal-wrapper"
  ) as HTMLElement | null;

  if (modalwrapper) {
    closebutton?.addEventListener("click", () => {
      modalwrapper.style.display = "none";
    });

    window.onclick = function (event) {
      if (event.target === modalwrapper) {
        modalwrapper.style.display = "none";
      }
    };
  }
</script>
