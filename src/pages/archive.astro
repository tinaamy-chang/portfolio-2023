---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon";
---

<Layout title="Tina Chang | Archive">
  <div id="archive-wrapper">
    <div id="archive-nav">
      <a href="/"
        ><Icon class="archive-icon" name="ic:sharp-arrow-back-ios" />
        <Icon class="archive-icon" name="ph:house-fill" />
        <p>Back to Main</p></a
      >
    </div>
    <h1>An Archive of Sorts</h1>
    <div id="archive-section-wrapper">
      <div class="archive-section">
        <h2 class="archive-title">Projects</h2>
        <div class="archive-gallery">
          <div class="archive-video">
            <iframe
              class="responsive-video border rounded-corners border"
              src="https://www.youtube.com/embed/NBXJJHjP8Y8"
              title="Widget Library Demo v1.0"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen></iframe>
          </div>
          <div class="archive-video bunlife-container rounded-corners border">
            <a href="https://tinaamy-chang.github.io/BunLife/" target="_blank"
              ><img
                class="bunlife-image"
                src="/archive/projects/archived_bunlife.png"
                alt="bunlife image"
              />
              <div class="bunlife-hover rounded-corners border">
                <img
                  class="bunlife-hover-image"
                  src="/archive/projects/archived_bunlifebutton.png"
                  alt="bunlife button image"
                />
              </div>
            </a>
          </div>
          <div class="archive-gallery">
            <img
              class="pop-image archive-image archive-image-top rounded-corners border"
              src="/archive/projects/archived_bills.png"
              alt="Unit, a banking app"
            />
            <img
              class="pop-image archive-image archive-image-top rounded-corners border"
              src="/archive/projects/archived_derekjeter.png"
              alt="Derek Jeter infographic"
            />
            <img
              class="pop-image archive-image archive-image-top rounded-corners border"
              src="/archive/projects/archived_devaworld.jpg"
              alt="Deva World landing page project poster"
            />
            <img
              class="pop-image archive-image archive-image-top rounded-corners border"
              src="/archive/projects/archived_lyme.gif"
              alt="Lyme Total email signature gif"
            />
            <img
              class="pop-image archive-image archive-image-center rounded-corners border"
              src="/archive/projects/archived_mapping.png"
              alt="Experiences Beyond Time, a map of my life for a period of time"
            />
            <img
              class="pop-image archive-image archive-image-center rounded-corners border"
              src="/archive/projects/archived_moor.png"
              alt="'Moor, pasta branding"
            />
            <img
              class="pop-image archive-image archive-image-center rounded-corners border"
              src="/archive/projects/archived_pathways.png"
              alt="Pathways to Success (USC) website & application design"
            />
            <img
              class="pop-image archive-image archive-image-center rounded-corners border"
              src="/archive/projects/archived_piecesofher.png"
              alt="Pieces of Her book cover"
            />
            <img
              class="pop-image archive-image archive-image-center rounded-corners border"
              src="/archive/projects/archived_reef.png"
              alt="What Happened to the Great Barrier Reef? infographic"
            />
            <img
              class="pop-image archive-image archive-image-center rounded-corners border"
              src="/archive/projects/archived_ruth.jpg"
              alt="Ruth Asawa logo 1"
            />
            <img
              class="pop-image archive-image archive-image-center rounded-corners border"
              src="/archive/projects/archived_ruth2.jpg"
              alt="Ruth Asawa logo 2"
            />
            <img
              class="pop-image archive-image archive-image-center rounded-corners border"
              src="/archive/projects/archived_stardog.jpeg"
              alt="Stardog, a dog plush"
            />
            <img
              class="pop-image archive-image archive-image-top rounded-corners border"
              src="/archive/projects/archived_tyk.png"
              alt="Test Your Knowledge marketing campaign at Bio-Rad"
            />
          </div>
        </div>
      </div>
      <div class="archive-section">
        <h2 class="archive-title">Illustrations</h2>
        <div class="archive-gallery">
          <div class="archive-video">
            <iframe
              class="responsive-video border rounded-corners border"
              src="https://www.youtube.com/embed/t8-ea-a3bbo"
              title="Widget Library Demo v1.0"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen></iframe>
          </div>
          <div class="archive-video">
            <iframe
              class="responsive-video border rounded-corners border"
              src="https://www.youtube.com/embed/_PE99AtniyU"
              title="Widget Library Demo v1.0"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen></iframe>
          </div>
        </div>
        <div class="archive-gallery">
          <img
            class="pop-image archive-image archive-image-center rounded-corners border"
            src="/archive/illustrations/illus_animals.png"
            alt="Forest animals"
          />
          <img
            class="pop-image archive-image archive-image-center rounded-corners border"
            src="/archive/illustrations/illus_bears.png"
            alt="Bear suits"
          />
          <img
            class="pop-image archive-image archive-image-top rounded-corners border"
            src="/archive/illustrations/illus_bunclicker.jpg"
            alt="BunClicker game designs"
          />
          <img
            class="pop-image archive-image archive-image-center rounded-corners border"
            src="/archive/illustrations/illus_capybara.png"
            alt="Capybara phone case"
          />
          <img
            class="pop-image archive-image archive-image-center rounded-corners border"
            src="/archive/illustrations/illus_donuts.jpg"
            alt="Donuts & texture play"
          />
          <img
            class="pop-image archive-image archive-image-center rounded-corners border"
            src="/archive/illustrations/illus_family.png"
            alt="A family portrait"
          />
          <img
            class="pop-image archive-image archive-image-center rounded-corners border"
            src="/archive/illustrations/illus_fish.jpg"
            alt="Fish/鱼/Yú"
          />
          <img
            class="pop-image archive-image archive-image-top rounded-corners border"
            src="/archive/illustrations/illus_fishpattern.jpg"
            alt="Fish pattern: pufferfish, boxfish, & wrasse"
          />
          <img
            class="pop-image archive-image archive-image-center rounded-corners border"
            src="/archive/illustrations/illus_galaxtea.jpg"
            alt="Boba, but galaxy'd"
          />
          <img
            class="pop-image archive-image archive-image-center rounded-corners border"
            src="/archive/illustrations/illus_maushold.png"
            alt="A family portrait inspired by Maushold the Pokemon"
          />
          <img
            class="pop-image archive-image archive-image-center rounded-corners border"
            src="/archive/illustrations/illus_milkley.jpg"
            alt="Sparkle"
          />
          <img
            class="pop-image archive-image archive-image-top rounded-corners border"
            src="/archive/illustrations/illus_subbird.jpg"
            alt="SubBird, Your Ocean Cleaner"
          />
          <img
            class="pop-image archive-image archive-image-center rounded-corners border"
            src="/archive/illustrations/illus_sunham.jpg"
            alt="Hamster & tea"
          />
        </div>
      </div>
    </div>
    <div id="archive-nav">
      <a href="/"
        ><Icon class="archive-icon" name="ic:sharp-arrow-back-ios" />
        <Icon class="archive-icon" name="ph:house-fill" />
        <p>Back to Main</p></a
      >
    </div>
    <div id="background-fish-wrapper">
      <img id="background-fish" src="/fish-circle.svg" />
    </div>
  </div>

  <style>
    #archive-nav a {
      font-size: 1.1em;
      display: inline-flex;
      flex-direction: row;
      gap: 10px;
      align-items: center;
      text-decoration: none;
      margin: -1px -4px;
      border-width: 1px 4px;
      border-style: solid;
      border-color: transparent;

      &:hover {
        background-color: #dbeef7;
      }
    }

    #archive-nav a p {
      &:hover {
        font-weight: 400;
      }
    }

    .archive-icon {
      width: 20px;
    }

    #archive-wrapper {
      max-width: 1200px;
      margin: auto;
      padding: 60px 40px 100px 40px;
      display: flex;
      flex-direction: column;
      gap: 40px;
      @media only screen and (max-width: 660px) {
        gap: 20px;
        padding: 40px 20px 80px 20px;
      }
    }

    #archive-section-wrapper {
      display: flex;
      flex-direction: column;
      gap: 80px;
      @media only screen and (max-width: 660px) {
        gap: 60px;
      }
    }

    .archive-section {
      display: flex;
      flex-direction: column;
      gap: 60px;
    }

    .archive-title {
      margin-bottom: 8px;
      padding: 12px 16px;
      background-color: #dbeef7;
      font-family: "freight-macro-pro", system-ui, sans-serif;
    }

    .archive-gallery {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      width: 100%;
      column-gap: 20px;
      row-gap: 40px;
      justify-content: space-between;
      @media only screen and (max-width: 660px) {
        gap: 20px;
      }
    }
    .archive-image {
      width: 30%;
      height: 150px;
      @media only screen and (max-width: 800px) {
        width: 27%;
        height: 100px;
      }
    }

    .archive-image-top {
      object-position: 50% 2%;
      object-fit: cover;
    }

    .archive-image-center {
      object-fit: cover;
    }
    .archive-video {
      width: 47%;
      @media only screen and (max-width: 750px) {
        width: 100%;
      }
    }
    .bunlife-container {
      position: relative;
      display: inline;
      transition: opacity 0.8s ease-in-out;
      &:hover {
        .bunlife-hover {
          visibility: visible;
          opacity: 1;
          transition: all 0.8s ease-in-out;
        }
      }
    }

    .bunlife-image {
      aspect-ratio: 16 / 9;
      width: 100%;
      border: 1px solid #efefef;
      border-radius: 4px;
      object-fit: cover;
    }

    .bunlife-hover {
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.7);
      align-items: center;
      justify-content: center;
      display: flex;
      visibility: hidden;
      opacity: 0;
      /* animation-name: hover-in-opacity;
        animation-duration: 0.6s; */
      transition: all 0.8s ease-in-out;
    }

    .bunlife-hover-image {
      width: 30%;
    }

    @keyframes hover-in-opacity {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }
  </style>
  <script>
    const backgroundFish = document.getElementById(
      "background-fish"
    ) as HTMLImageElement;

    let fish = {
      rotation: 0,
    };
    let lastScrollTop = 0;

    document.addEventListener("scroll", (event) => {
      let st = window.pageYOffset || document.documentElement.scrollTop;
      if (st > lastScrollTop) {
        // downscroll code
        fish.rotation -= 0.2;
      } else {
        // upscroll code
        fish.rotation += 0.2;
      }
      lastScrollTop = st <= 0 ? 0 : st; // For Mobile or negative scrolling
      backgroundFish.style.transform = "rotate(" + fish.rotation + "deg)";
    });
  </script>
</Layout>
